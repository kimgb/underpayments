%h3 Send a message to #{ @user.profile.full_name }

= form_for [@user, @message], url: admin_user_messages_path(@user), html: { multipart: true, class: "form" } do |f|
  .form-group
    = f.label :subject, t('views.admin.messages.new.subject'), class: "control-label"
    .input-group
      .input-group-addon
        %i.glyphicon.glyphicon-tag
      = f.text_field :subject, class: "form-control", value: "Your underpayment claim"

  .form-group
    = f.label :body, t('views.admin.messages.new.body'), class: "control-label"
    .input-group
      .input-group-addon
        %i.glyphicon.glyphicon-pencil
      = f.text_area :body, class: "form-control", rows: 10, value: "Hello #{@user.profile.given_name},\n\n\n\nRegards,\n\n#{current_user.profile_full_name}\nNational Union of Workers"
      
  .checkbox
    = f.label :unlock do
      = f.check_box :unlock
      = "Unlock claim for editing"

  %p.actions.text-right= button_tag "", type: "submit", class: "btn btn-default glyphicon glyphicon-send pull-right"
  -# make sure the border doesn't cut through the glyphicon
  %p &nbsp;
  /= f.submit t('message.send'), class: "btn btn-default"
