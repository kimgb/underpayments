= form_for(@claim, url: admin_claim_path(@claim), html: { id: "claim_update_status", class: "form", multipart: true }) do |f|
  = render partial: "layouts/errors", locals: { resource: @claim }

  %fieldset
    .form-group
      = f.label :status, t('views.admin.claims.form.status'), class: "control-label"
      .input-group
        .input-group-addon
          %i.glyphicon.glyphicon-tag
        = f.text_field :status, class: "form-control"

    .form-group
      = f.label :comment, t('views.admin.claims.form.comment'), class: "control-label"\
      .input-group
        .input-group-addon
          %i.glyphicon.glyphicon-pencil
        = f.text_area :comment, class: "form-control"

  .actions.align-right
    = button_tag "", type: "reset", class: "btn btn-default btn-sm glyphicon glyphicon-remove"
    = button_tag "", type: "submit", class: "btn btn-default btn-sm glyphicon glyphicon-ok", style: "margin-left: 1rem;"
    
