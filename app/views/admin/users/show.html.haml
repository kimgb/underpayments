%h3= "User: #{@user.email}"
- if @user.claim.present?
  = link_to "Send a message", new_admin_claim_message_path(@user.claim), class: "btn btn-default btn-sm"
  &ensp;
  = link_to "Letter of demand", new_admin_user_letter_path(@user), class: "btn btn-default btn-sm"
  -# = link_to "Letter of demand", pages_path(page: "letter", layout: "print", user_id: @user), class: "btn btn-default"
  &ensp;
  = render partial: "admin/claims/toggle_lock", locals: { claim: @user.claim }
  &ensp;
  = link_to "#{pluralize(@user.claim.messages.size, 'message')}", admin_claim_messages_path(@user.claim), class: "btn btn-default btn-sm"
  = render partial: "admin/claims/update_status", locals: { claim: @user.claim }

%h3 
  User details
  %small= link_to("(edit)", edit_admin_profile_path(@user.profile))
:markdown
  #{ markdown_model(@user) }  
  #{ markdown_model(@user.profile) }

- if @user.address
  = render partial: "admin/addresses/address", locals: { address: @user.address, title: "User address", edit: "edit" }

- if @user.claim.present? 
  - if @user.claim.valid?
    %h3 
      Claim
      %small= link_to("(edit)", edit_admin_claim_path(@user.claim))
    :markdown
      #{ markdown_model(@user.claim) }
    = render partial: "admin/documents/documents", locals: { documents: @user.claim.documents }
    - if @user.claim.presentable_companies.any?
      - @user.claim.presentable_companies.each do |cc|
        = render partial: "admin/companies/company", locals: { claim_company: cc, company: cc.company, claim: cc.claim } 
  - else
    %h3 Claim
    %p 
      An empty claim has been added to this record.
      = link_to "Edit it?", edit_admin_claim_path(@user.claim)
- else
  %h3 Claim
  %p 
    This user hasn't added a claim yet.
    = form_for([:admin, Claim.new]) do |f|
      = f.hidden_field :user_id, value: @user.id
      = button_tag "Add an empty claim?", type: "submit", class: "btn btn-default"
    %small (This will allow you to send messages to the user)
