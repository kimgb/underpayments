<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Family name</th>
      <th>Given name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Country</th>
      <th>Postal code</th>
      <th>Province</th>
      <th>Town</th>
      <th>Street address</th>
      <th>Secondary street address</th>
      <th>Preferred language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.family_name %></td>
        <td><%= user.given_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.country %></td>
        <td><%= user.postal_code %></td>
        <td><%= user.province %></td>
        <td><%= user.town %></td>
        <td><%= user.street_address %></td>
        <td><%= user.secondary_street_address %></td>
        <td><%= user.preferred_language %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

