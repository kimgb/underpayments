<%= form_for(@user, html: { class: "form-horizontal", multipart: true }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend><%= t('user.new.title') %></legend>
    <p><%= t('user.new.description') %></p>

    <div class="form-group">
      <%= f.label :email, t('user.email'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, t('user.password'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :family_name, t('user.family_name'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :family_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :given_name, t('user.given_name'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :given_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group form-inline">
      <%= f.label :date_of_birth, t('user.date_of_birth'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.date_select :date_of_birth, { order: [:day, :month, :year], start_year: Date.today.year - 14, end_year: Date.today.year - 100 }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :phone, t('user.phone'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :preferred_language, t('user.preferred_language'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.select  :preferred_language,
          options_for_select([
            ["English (Australia)", "en-AU"],
            ["Chinese (Taiwan)", "zh-TW"],
            ["Vietnamese", "vi"]
          ], "en-AU"),
          {}, { class: "form-control" } %>
      </div>
    </div>
  </fieldset>

  <div class="actions text-right">
    <%= f.submit t('user.create'), class: "btn btn-default" %>
  </div>
<% end %>
