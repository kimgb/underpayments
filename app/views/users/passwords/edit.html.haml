%h2= t('devise.passwords.edit.change_your_password')

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token

  .form-group
    = f.label :password, t('devise.passwords.edit.new_password')
    - if @minimum_password_length
      %em= "(#{@minimum_password_length} characters minimum)"
      %br/
    .input-group
      .input-group-addon
        %i.glyphicon.glyphicon-lock
      = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control"

  .actions
    = f.submit t('devise.passwords.edit.change_my_password'), class: "btn btn-default"

= render "users/shared/links"
