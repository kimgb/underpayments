%h3 
  Company
  = home_title(company, claim)
  %small= link_if_unlocked(company, "(#{t('.edit')})", edit_company_path(company))
:markdown
  #{markdown_model(company)}

- if company.address
  = render partial: "addresses/address", locals: { address: company.address, title: t('.address.heading'), edit: t('.address.edit') }
- else
  %h4= t('.address.heading')
  %p
    = t('.address.missing')
    = link_to t('.address.complete'), new_company_company_address_path(company), class: "btn btn-sm btn-default"
