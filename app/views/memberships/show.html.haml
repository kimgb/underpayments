- if @person
  %h4= "We've found membership records for you. You're ready to proceed!"
  = form_for(current_user.claim, html: { class: "form", multipart: true }) do |f|
    = f.hidden_field :submitted_for_review, value: true  
    .actions
      = f.submit t('views.claims.review.commit'), class: "btn btn-lg btn-default"
- else
  %h4= "You're ready to proceed, but we can't find any membership records for you. We can only run claims for union members."
  %p= join_form_link "Join the union", class: "btn btn-lg btn-default"
