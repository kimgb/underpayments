%h3 
  Personal details
  %small= link_if_unlocked(profile, "(#{t('views.profiles.profile.edit')})", edit_profile_path)

:markdown
  #{markdown_model(profile)}

- if profile.address
  %h4
    = t('views.users.show.address.heading')
    %small= link_if_unlocked(profile, "(#{t('views.profiles.profile.address.remove')})", profile_path(profile: { address_id: nil }), method: :put, data: { confirm: "Are you sure?" })

  :markdown
    #{ markdown_model(profile.address) }
- else
  %h4= t('views.users.show.address.heading')
  %p
    = t('views.users.show.address.missing')
    = link_to t('views.users.show.address.complete'), edit_profile_path, class: "btn btn-sm btn-default"
