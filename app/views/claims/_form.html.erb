<%= form_for([@user, @claim], html: { class: "form-horizontal", multipart: true }) do |f| %>
  <fieldset>
    <legend><%= t('claim.new_form_title') %></legend>

    <div class="form-group">
      <%= f.label :award, t('claim.award'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.select :award,
          options_for_select([
              ["Horticulture", "horticulture"],
              ["Poultry Processing", "poultry"]
            ], "horticulture"),
            {}, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :total_hours, t('claim.total_hours'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.number_field :total_hours, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :hourly_pay, t('claim.hourly_pay'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9 input-group" style="padding-left: 1.5rem; padding-right: 1.5rem;">
        <div class="input-group-addon">$</div>
        <%= f.number_field :hourly_pay, class: "form-control", min: "0", step: "0.01" %>
      </div>
    </div>

    <div class="form-group form-inline">
      <%= f.label :employment_began_on, t('claim.employment_began_on'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.date_select :employment_began_on, { order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year - 7 }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group form-inline">
      <%= f.label :employment_ended_on, t('claim.employment_ended_on'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.date_select :employment_ended_on, { order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year - 7 }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :employment_type, t('claim.employment_type'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.select :employment_type,
          options_for_select([
              ["Casual"],
              ["Permanent"]
            ], "Casual"),
            {}, { class: "form-control" } %>
      </div>
    </div>
  </fieldset>

  <div class="actions text-right">
    <%= f.submit t('claim.create'), class: "btn btn-default" %>
  </div>
<% end %>
