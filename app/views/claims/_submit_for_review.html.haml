- if paid? || paying?
  %p= t('views.claims.review.description')
  = form_for(claim, html: { class: "form", multipart: true }) do |f|
    = f.hidden_field :submitted_for_review, value: true  
    .actions.text-center
      %h4= "We've found membership records for you. You're ready to proceed."
      = f.submit t('views.claims.review.commit'), class: "btn btn-lg btn-default"
- else
  %h4{ style: "color: #DAA520" }= "You're ready to proceed, but we can't find any membership records for you. We can only run claims for union members."
  %p= join_form_link "Join the union", class: "btn btn-lg btn-default"
