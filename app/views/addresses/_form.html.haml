= form_for([@company, @address], html: { class: "form", multipart: true }) do |f|
  = render partial: "layouts/errors", locals: { resource: @address }

  %fieldset
    %legend= t("views.addresses.form.title")
    = f.hidden_field :country, value: "AU"
    -# = hidden_field_tag :addressable_type, @addressable.class.to_s
    -# = hidden_field_tag :addressable_id, @addressable.id

    .form-group
      = f.label :street_address, class: "control-label"
      %br/
      = f.text_area :street_address, class: "form-control", rows: 2
    -# .form-group
    -#   = f.label :secondary_street_address, class: "control-label"
    -#   %br/
    -#   = f.text_field :secondary_street_address, class: "form-control"
    .form-group
      = f.label :town, class: "control-label"
      %br/
      = f.text_field :town, class: "form-control"
    .form-group
      = f.label :province, class: "control-label"
      %br/
      = f.select :province, options_for_select([["Australian Capital Territory", "ACT"], ["New South Wales", "NSW"], ["Northern Territory", "NT"], ["Queensland", "QLD"], ["South Australia", "SA"], ["Tasmania", "TAS"], ["Victoria", "VIC"], ["Western Australia", "WA"]]), {}, { class: "form-control" }
    .form-group
      = f.label :postal_code, class: "control-label"
      %br/
      = f.text_field :postal_code, class: "form-control"
    -# .form-group
      -# = f.label :country, class: "control-label"
      -# %br/
      -# = f.text_field :country, class: "form-control"

  .actions.text-right
    = f.submit t('views.addresses.form.commit'), class: "btn btn-sm btn-default"
