<%= form_for([@addressable, @address], html: { class: "form-horizontal", multipart: true }) do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <fieldset>
    <legend><%= t('address.new_form_title') %></legend>

    <div class="form-group">
      <%= f.label :street_address, t('address.street_address'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :street_address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :secondary_street_address, t('address.secondary_street_address'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :secondary_street_address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :town, t('address.town'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :town, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :province, t('address.province'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :province, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :postal_code, t('address.postal_code'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, t('address.country'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= f.text_field :country, class: "form-control" %>
      </div>
    </div>
  </fieldset>

  <div class="actions text-right">
    <%= f.submit t('address.create'), class: "btn btn-default" %>
  </div>
<% end %>
