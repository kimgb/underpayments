<%= f.fields_for :address, Address.new do |af| %>
  <fieldset>
    <legend><%= legend %></legend>

    <div class="form-group">
      <%= af.label :street_address, t('address.form.street_address'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= af.text_field :street_address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= af.label :secondary_street_address, t('address.form.secondary_street_address'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= af.text_field :secondary_street_address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= af.label :town, t('address.form.town'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= af.text_field :town, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= af.label :province, t('address.form.province'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= af.text_field :province, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= af.label :postal_code, t('address.form.postal_code'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= af.text_field :postal_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= af.label :country, t('address.form.country'),
        class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= af.text_field :country, class: "form-control" %>
      </div>
    </div>
  </fieldset>
<% end %>
