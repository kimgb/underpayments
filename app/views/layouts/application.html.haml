!!! 5
%html{ lang: "#{ I18n.locale }" }
  %head
    %title= page_title
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    = stylesheet_link_tag href='https://fonts.googleapis.com/css?family=Open+Sans:400,700'

  %body
    .container-fluid
      %header#top-header
        = render partial: 'layouts/authentication'


      %main
        #flash
          - if notice
            %p.notice= notice
          - if alert
            %p.alert= alert

        = render partial: 'layouts/banner'

        = yield

        %footer.align-right
          %hr/

          :markdown
            #{ t('.footer') }
        
    - if @skin
      :scss
        $brand-primary: #{ @skin.link_color };
        $headings-color: #{ @skin.headings_color };
        $background-color: #{ @skin.background_color };
        $text-color: #{ @skin.text_color };
        
        body { color: $text-color; }
        main { background-color: $background-color; }
        h1, h2, h3, h4, h5, h6 { color: $headings-color; }
        nav.navbar.navbar-default { 
          background-color: darken($brand-primary, 15%);
          border-color: darken($brand-primary, 15%);
        }
        
        a { color: $brand-primary; }
        a:hover { color: darken($brand-primary, 15%); }
        .btn-default {
          color: $text-color;
          background-color: $brand-primary;
          border-color: $brand-primary;
        }
        .btn-default:hover {
          background-color: darken($brand-primary, 15%);
          border-color: darken($brand-primary, 15%);
        }

    :javascript
