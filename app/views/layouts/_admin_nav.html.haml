%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      = link_to image_tag("fair-pay-logo_90px_rgb.png"), admin_root_path, title: "Home", class: "navbar-left", style: "max-height: 80px; padding: 0.7rem;"
      %button.navbar-toggle.glyphicon.glyphicon-tasks.collapsed{ type: "button", data: { toggle: "collapse", target: "#nav-items" }, aria: { expanded: false } }
        %span.sr-only Toggle navigation
    
    .collapse.navbar-collapse#nav-items
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          = link_to admin_claims_path, class: "dropdown-toggle navbar-link", role: "button", data: { toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do
            = t('layouts.authentication.administrate')
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Claims", admin_claims_path
            %li= link_to "Claim stages", admin_claim_stages_path
            %li= link_to "Companies", admin_companies_path
            %li= link_to "Organisations", admin_supergroups_path
            %li= link_to "Campaigns", admin_groups_path
            %li.divider{ role: "separator" }
            %li= link_to "Send invite", new_user_invitation_path
        
        %li= link_to t('layouts.authentication.sign_out'), destroy_user_session_path, method: :delete, class: "navbar-link"
