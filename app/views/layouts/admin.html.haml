!!! 5
%html{ lang: "#{ I18n.locale }" }
  %head
    %title= page_title
    %meta{ charset: "utf-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1" }
    
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    .container-fluid
      %header#top-header
        = render partial: 'layouts/authentication'
      
      %main
        #flash
          - if notice
            %p.notice= notice
          - if alert
            %p.alert= alert
        
        = yield
