%h3= basename(@document)

%p
  This document covers the period from
  %time{ datetime: @document.coverage_start_date }= @document.coverage_start_date.to_s(:long)
  to
  %time{ datetime: @document.coverage_end_date }= @document.coverage_end_date.to_s(:long)
%p= link_to image_tag(@document.file.thumb.url), @document.file.url
%p
  = link_to "Delete", document_path(@document), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default"
  = link_to "Back", :back, class: "btn btn-default"
