%h3= basename(@document)

%p= t(:duration, scope: 'views.documents.show', beginning: @document.coverage_start_date.to_s(:long), end: @document.coverage_end_date.to_s(:long))

%p 
  - if @document.wage_evidence
    = t(:wages, scope: 'views.documents.show', wages: number_to_currency(@document.wages))
  %br/
  - if @document.time_evidence
    = t(:hours, scope: 'views.documents.show', hours: number_with_delimiter(@document.hours))

- if @document.evidence.present?
  %p= t('views.documents.show.evidence')
  %p= link_to image_tag(@document.evidence.thumb.url), @document.evidence.url
  
- if @document.statement.present?
  %p= t('views.documents.show.statement')
  %blockquote= html_escape(@document.statement).gsub("\r\n", "<br/>").html_safe
  
%p
  = link_to t('views.documents.show.delete'), document_path(@document), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default"
  = link_to t('views.documents.show.back'), :back, class: "btn btn-default"
